{
  "compilerOptions": {
    "target": "es6",                                  
    "lib": ["DOM"],                                        
    "jsx": "react",                                
    "module": "commonjs",                                
    "moduleResolution": "node",                       
    "rootDirs": ["./src", "./stories"],                                   
    "declaration": true,                              
    "declarationMap": true,                           
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                      
    "skipLibCheck": true                                 
  }
}
